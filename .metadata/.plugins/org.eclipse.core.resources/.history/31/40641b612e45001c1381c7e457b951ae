public class StatisticheCorso extends JFrame {

	private JPanel contentPane;
	private GeneralPanel panel;
	
	public StatisticheCorso() {
		
		super("Project GRU");
		setIconImage(Toolkit.getDefaultToolkit().getImage("C:\\Users\\matti\\Desktop\\lastin.png"));
		
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 517, 555);
		getContentPane().setLayout(null);
		setResizable(false);
		setLocationRelativeTo(null);
		
		panel = new GeneralPanel();
		panel.labelHourDate.setBounds(236, 463, 265, 53);
		getContentPane().add(panel);
		Object[] columns = {"NomeCorso","MediaPresenza","MinimoPresenza","MassimoPresenza","RiempimentoMedio"};
		DefaultTableModel model = new DefaultTableModel();
		model.setColumnIdentifiers(columns);
		panel.setLayout(null);
		
		JTable tableStats = new JTable();
		tableStats.setBounds(1, 1, 8, 0);
		panel.add(tableStats);
		tableStats.setModel(model);
		tableStats.setBackground(Color.white);
		tableStats.setFont(new Font("Tahoma",Font.PLAIN,17));
		tableStats.setRowHeight(30);
		tableStats.setAutoCreateRowSorter(true);
		
		JScrollPane pane = new JScrollPane(tableStats);
		pane.setForeground(Color.red);
		panel.setBackground(Color.white);
		
		Panel panel_1 = new Panel();
		panel_1.setBounds(10, 196, 481, 261);
