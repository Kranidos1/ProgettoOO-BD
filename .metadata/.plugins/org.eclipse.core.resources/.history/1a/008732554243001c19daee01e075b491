	public void setTimer() {
		timer = new Timer(1000,new ActionListener() {

			@Override
			public void actionPerformed(ActionEvent e) {
				// TODO Auto-generated method stub
				data = new Date();
				stringDate = data.toLocaleString();
				labelHourDate.setText(stringDate);
			}		
		});	
		timer.setRepeats(true);
		timer.start();
	}

	@Override
	public boolean isWhatYouWant(String input , int fleg) {
		// TODO Auto-generated method stub
		//FLAG 0 PER STRINGA 1 PER NUMERI
		if(fleg == 0) {
			System.out.println("ciaooo");
			if(input.contains("[0-9]")) {
				System.out.println("ciaooo");
				return false;
			}else 
				return true;
			
		}else 
			if(input.contains("[a-zA-Z]")) {
				return false;
			}else
				return true;
	    
	}

	@Override
	public boolean isEmptyArea(JTextArea input) {
		// TODO Auto-generated method stub
		return false;
	}

	@Override
	public boolean isEmptyField(JTextField input) {
		// TODO Auto-generated method stub
		return false;
	}
