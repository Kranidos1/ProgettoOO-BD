import java.awt.*;
import java.awt.EventQueue;
import java.awt.Toolkit;
import java.util.Date;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;
import javax.swing.BorderFactory;
import java.awt.Color;
import java.awt.Font;
import javax.swing.SwingConstants;

public class secondFrame extends JFrame {

	boolean x = true;
	private JPanel contentPane;
	private Date data;
	private String stringDate;
	private JLabel labelSetHour;
	GeneralPanel panel;
	
	public secondFrame() {
		
		super("Project GRU");
		
		setVisible(true);
		setIconImage(Toolkit.getDefaultToolkit().getImage("C:\\Users\\matti\\Desktop\\lastin.png"));	
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 517, 539);
		getContentPane().setLayout(null);
		setResizable(false);
		
		panel = new GeneralPanel();
		getContentPane().add(panel);
		
		labelSetHour = new JLabel("");
		labelSetHour.setHorizontalAlignment(SwingConstants.CENTER);
		labelSetHour.setFont(new Font("Arial Black", Font.PLAIN, 19));
		labelSetHour.setBorder(BorderFactory.createMatteBorder(2, 2, 2, 2, Color.black));
		labelSetHour.setBounds(169, 401, 331, 99);
		panel.add(labelSetHour);
		
		try {
			Thread.sleep(2000);
		} catch (InterruptedException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		setHourDate();
		
	}
	public void setHourDate() {
		
		while(x) {
			
			data = new Date();
			stringDate = data.toGMTString();
			labelSetHour.setText(stringDate);
			try {
				Thread.sleep(1000);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
		
	}
}
